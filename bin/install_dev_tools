#! /usr/bin/env bash

# DESCRIPTION
# Installs development tooling requirements.

printf "Installing Xcode CLI tools...\n"
xcode-select --install

read -p "Have you completed the Xcode CLI tools install or already install Xcode and launched it at least once (y/n)? " response
if [[ "$response" =~ ^([nN][oO]|[nN])$ ]]; then
  printf "ERROR: Xcode must be launched it at least once if it is already installed or Xcode CLI tools must be installed before proceeding.\n"
  exit 1
fi

printf "Installing Java...\n"
install_java "$JAVA_URL" "$JAVA_VOLUME_NAME"
